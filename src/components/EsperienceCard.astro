---
import type { Experience } from "../data/experience";

interface Props{
    experience: Experience;
}

const { experience } = Astro.props
const { title, company, date_start, date_end, description } = experience;
---

<article class="flex flex-col gap-5 mb-10">
  <div class="flex flex-col gap-1">
    <h2 class="text-lg font-semibold text-[30px]">
      {title}<span class="mx-2">&#x2022</span>{company}
    </h2>
    <p class="text-sm">
      {date_start} - {date_end}
    </p>
  </div>
  <ul
    class="leading-7 list-disc text-base font-medium list-inside text-slate-400 dark:text-gray-300"
  >
    {description.map((item: string) => <li>{item}</li>)}
  </ul>
</article>