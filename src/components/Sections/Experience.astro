---
import ExperienceCard from "../EsperienceCard.astro"
import { experience } from "../../data/experience"
---
<section class="flex flex-col items-center">
    <div class="bg-[#161722] w-[80%] flex flex-col items-center pb-8">
        <h1 class="font-bold text-[50px] pb-[50px]">Experiencia</h1>
        <div class="flex flex-col items-start">
            {experience.map((experience) => <ExperienceCard experience={experience} />)}
        </div>
    </div>
</section>
